{
    "compilerOptions": {
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "lib": [
            "es6",
            "dom"
        ],
        "experimentalDecorators": true,
        "declaration": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "newLine": "LF",
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": false,
        "typeRoots": ["node_modules/@0xproject/typescript-typings/types", "node_modules/@types", "src/types"]
    }
}
