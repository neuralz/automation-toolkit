{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@0xproject/typescript-typings/types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src/node/aqueduct-server/**/*.ts"
  ]
}
